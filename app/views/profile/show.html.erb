<h1>Do you want to cancel follow request to <%= @user.username %>?</h1>
<% if current_user.following?(@user) %>
  <%= button_to "Unfollow", unfollow_path(@user),class:"ui inverted red button" %>
<% elsif current_user.sent_follow_request_to?(@user)%>
  <%= button_to "Cancel follow request", cancel_path(@user),class:"ui inverted red button" %>
<% else %>
  <%= button_to "Follow",  follow_path(@user),class:"ui inverted green button" %>
<% end %>