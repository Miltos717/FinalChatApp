<div class="ui centered card">
  <div class="content">
    <div class="header">Friends</div>
    <% if current_user %>
      <div class="ui label">
        <i class="user icon"></i> Logged in as <%= current_user.email %>
      </div>

      <% current_user.follow_requests.each do |request| %>
        <%= request.followerable.username  %>  wants to follow you
        <%= button_to "Accept", accept_path(request.followerable),class:"ui inverted green button" %>
        <%= button_to "Decline", decline_path(request.followerable),class:"ui inverted red button" %>
      <% end %>
      <hr />
      <% current_user.followers.each do |user| %>
        <%= link_to user.username, profile_path(user),class: "ui violet button"  %>  is following you
        <%= button_to "Unfollow", unfollow_path(user),class:"ui inverted red button"%>
      <% end %>
    <% else %>
      <%= link_to "log in",login_path,class: "ui primary button" %>
    <% end %>
  </div>
</div>
</div>

<style>
    .label {
        display: inline-block;
        margin-bottom: 1em;
        padding: 0.5em;
        background-color: #f3f3f3;
        border: 1px solid #ddd;
        border-radius: 0.25rem;
    }

    .label i {
        margin-right: 0.5em;
    }
</style>
